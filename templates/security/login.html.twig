{% extends 'base.html.twig' %}

{% block body %}
<h1>Connexion</h1>
<form action="{{ path('security_login')}}" method="POST">
    <div class="form-group">
        <input type="text" class="form-control" placeholder="adresse email" required name="_username">
    </div>
    <div class="form-group">
        <input type="text" class="form-control" placeholder="mot de passe" required name="_password">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Connexion !</button>
    </div>    
</form>
{% endblock %}